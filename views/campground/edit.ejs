<%- include("../header") %>
<div class="container">
	<h1 style="text-align :center">
		Edit <%=campground.name%>
	</h1>
	
	<div class="row">
		<div style="width: 30% ; margin : 25px auto;">
			<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type ="text" value="<%=campground.name%>" name="campgrounds[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type ="text" value="<%=campground.image%>" name="campgrounds[image]">
				</div>
				<div>
					<input class="form-control" type ="text" value="<%=campground.description%>" name="campgrounds[description]">
				</div>
				<div class="form-group" style="margin : 15px 0 15px 0 ">	
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>	
			<a href="/campgrounds">Go Back</a>	
		</div>	
	</div>	
</div>


<%- include("../footer") %>