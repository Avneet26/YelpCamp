<%- include("../header") %>



<div class="container">
	<header class = "jumbotron">
		<div class="contianer">
			<h1>
				Welcome to YelpCamp !
			</h1>
			<p>
				View hand-picked selection of campgrounds from all over the world
			</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
			</p>
		</div>
		
	</header>
	
	<div class="row text-center" style="display: flex;flex-wrap: wrap">
		<% campgrounds.forEach(function(camps){ %>
		<div class = "col-md-3 col-sm-6">
			<div class="thumbnail">
					<img src="<%=camps.image%>">
				<div class= "caption">
					<h4><%=camps.name%></h4>
				</div>
				<p>
					<a href="/campgrounds/<%=camps._id%>" class="btn btn-primary">More Info</a>
				</p>
			</div>	
   		</div>	
		<%})%>
	</div>
</div>

	


<%- include("../footer") %>